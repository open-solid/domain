{
    "name": "open-solid/domain",
    "description": "Domain events, event bus and more",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Yonel Ceruto",
            "email": "open@yceruto.dev"
        }
    ],
    "require": {
        "php": ">=8.2",
        "open-solid/bus": "^1.1",
        "symfony/string": "^7.1",
        "symfony/uid": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "symfony/messenger": "^7.1",
        "friendsofphp/php-cs-fixer": "^3.54"
    },
    "autoload": {
        "psr-4": {
            "OpenSolid\\Domain\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenSolid\\Domain\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests",
        "cs": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    }
}
